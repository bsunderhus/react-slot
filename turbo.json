{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts", "Cargo.toml"],
      "outputs": ["dist/**"]
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": ["dist-tsc/**"]
    },
    "build:api": {
      "dependsOn": ["^build:api", "build:types"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "api-extractor.json"],
      "outputs": ["dist/**"]
    },
    "prepack": {
      "dependsOn": ["build", "build:api"],
      "outputs": ["*.wasm", "dist/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
